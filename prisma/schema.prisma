generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url = env("POSTGRES_PRISMA_URL") // uses connection pooling
  directUrl = env("POSTGRES_URL_NON_POOLING") // uses a direct connection
}

model projects {
  id                     BigInt          @id @default(autoincrement()) @db.BigInt
  user_id                BigInt          @db.BigInt
  project_date           String?         @db.VarChar(255)
  project_place          String?         @db.VarChar(255)
  project_category       String?         @db.VarChar(255)
  project_title          String          @db.VarChar(255)
  project_extract        String?         @db.VarChar(255)
  project_teaser         String?         @db.Text
  project_description    String?         @db.Text
  project_goal           String?         @db.Text
  project_method         String?         @db.Text
  project_results        String?         @db.Text
  project_single_url     String?         @db.VarChar(255)
  project_infos          Json?
  project_meta           Json?
  project_publish_status String?         @db.VarChar(255)
  created_at             DateTime?       @db.Timestamp(0)
  updated_at             DateTime?       @db.Timestamp(0)
}

